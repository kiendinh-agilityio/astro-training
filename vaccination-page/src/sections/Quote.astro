---
import Input from 'components/Input';
import Paragraph from 'components/Paragraph';
import Container from 'components/Container';
---

<section class="bg-white min-h-[114px] md:min-h-[104px] lg:min-h-[184px]">
  <Container>
    <div class="relative flex justify-center items-center">
      <div
        class="absolute top-0 bg-tertiary-15 border-tertiary-15 rounded-[20px] px-3 pt-[31px] pb-7 md:w-[709px] md:py-[28px] md:px-[25px] md:rounded-[50px] lg:px-[17px] lg:py-[18px] xl:w-[1067px]">
        <div
          class="flex flex-col items-center bg-secondary border-secondary rounded-[10px] leading-base pt-4 pb-8 px-2.5 md:pb-14 md:px-12 md:rounded-[50px] lg:py-[59px] lg:text-2xl">
          <Paragraph
            className="text-lg pb-[5px] md:pb-5 lg:pt-[11px]"
            type="heading"
            tag="h2"
            title="Get a quote"
          />
          <Paragraph
            className="sm:font-medium mb-6 md:mb-7 lg:mb-10"
            type="sub_heading"
            tag="p"
            title="Please do enter your email address below"
          />
          <div class="quote-form relative w-full md:pl-3.5 lg:max-w-[550px] lg:pl-0 lg:pb-12">
            <Input
              id="quote-email"
              className="quote-email shadow-quaternary focus:outline-none h-[40px] rounded-[20px] px-3 py-3.5 placeholder:text-xs placeholder:text-black/25 md:h-[75px] md:rounded-[30px] md:px-10 md:py-7 md:placeholder:text-xl"
              name="email" type="email" placeholder="lenux.ng@gmail.com" />
            <button id="btn-quote" class="btn-quote shadow-quaternary absolute bg-primary right-0 top-0 w-[58px] h-[40px] rounded-r-[20px] px-3 py-2.5 md:w-[100px] md:h-[75px] md:px-[30px] md:py-[18px] md:rounded-r-[30px]">
              <img loading="lazy" width="23px" height="20px" src="assets/images/svg/send.svg" alt="Send"
                class="h-[20px] md:w-[40px] md:h-[40px]">
            </button>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
