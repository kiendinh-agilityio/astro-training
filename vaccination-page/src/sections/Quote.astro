---
import Input from 'components/Input';
import Heading from 'components/Heading';
import Container from 'components/Container';
---

<section class="bg-white min-h-[114px] md:min-h-[104px] lg:min-h-[184px]">
  <Container>
    <div class="relative flex justify-center items-center">
      <div class="absolute top-0 bg-tertiary-15 border-tertiary-15 rounded-[20px] px-3 pt-[31px] pb-7 md:w-[709px] md:py-[28px] md:px-[25px] md:rounded-[50px] lg:px-[17px] lg:py-[18px] xl:w-[1067px]">
        <div class="flex flex-col items-center bg-secondary border-secondary rounded-[10px] leading-base pt-4 pb-8 px-2.5 md:pb-14 md:pl-[62px] md:pr-12 md:rounded-[50px] lg:pt-[70px] lg:pb-[107px] lg:text-2xl">
          <Heading className="text-lg mb-[5px] md:mb-5">
            Get a quote
          </Heading>
          <p class="font-medium text-xs mb-6 md:mb-7 md:text-xl lg:mb-10">Please do enter your email address below</p>
          <div class="relative w-full lg:max-w-[550px]">
            <Input
              className="focus:outline-none h-[40px] rounded-[20px] px-3 py-3.5 placeholder:text-xs placeholder:text-black/25 md:h-[75px] md:rounded-[30px] md:px-10 md:py-7 md:placeholder:text-xl"
              name="email"
              type="email"
              placeholder="lenux.ng@gmail.com"
            />
            <a class="absolute bg-primary right-0 top-0 w-[58px] h-[40px] rounded-card-2md px-3 py-2.5 md:w-[100px] md:h-[75px] md:px-[30px] md:py-[18px] md:rounded-card-3md" href="#">
              <img loading="lazy" width="23px" height="20px" src="assets/images/svg/send.svg" alt="Send" class="h-[20px] md:w-[40px] md:h-[40px]">
            </a>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>
