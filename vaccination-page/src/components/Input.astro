---
export interface InputProps {
  className?: string;
  placeholder?: string;
  name?: string;
  type?: string;
  value?: string;
}

const {
  className = '',
  name = '',
  type = 'text',
  placeholder = '',
  value = '',
} = Astro.props;
---

<input
  type={type}
  name={name}
  placeholder={placeholder}
  class={`w-full font-primary text-input text-sm leading-normal md:text-xl ${className}`}
  value={value}
/>
