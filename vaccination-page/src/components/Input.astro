---
export interface InputProps {
  className?: string;
  placeholder?: string;
  name?: string;
  type: string;
  id?: string;
}

const {
  className = '',
  name = '',
  type = 'text',
  placeholder = '',
  id,
} = Astro.props;
---

<input
  id={id}
  type={type}
  name={name}
  placeholder={placeholder}
  class={`w-full font-primary text-input text-sm leading-normal md:text-xl ${className}`}
/>
